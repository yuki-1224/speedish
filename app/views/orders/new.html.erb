<div class="text-center">
  <div class="container">
    <h2><%= @menu.name %></h2>
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @menu.image.url %>
        <div class="order-form">
          <%= form_for @order do |f| %>
            <div class="form-group">
              <%= f.label :quanity, "注文個数" %>
              <%= f.number_field :quanity%>
            </div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :menu_id, :value => @menu.id %>
            <%= f.hidden_field :reserve_id, :value => @reserve.id %>
            <%= f.submit '決定', class: 'btn-block' %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
